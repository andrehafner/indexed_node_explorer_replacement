# ergo-index Configuration
# Copy this to .env and modify as needed

# Node connection (comma-separated for multiple nodes)
ERGO_NODES=http://localhost:9053

# Node API key (required for wallet operations)
NODE_API_KEY=

# Network (mainnet or testnet)
NETWORK=mainnet

# Sync settings
SYNC_BATCH_SIZE=100
SYNC_INTERVAL=10

# Port mappings
INDEX_PORT=8080
NODE_PORT=9053
NODE_P2P_PORT=9030
